@using TravelReservation.CQRS.Results.DestinationResults 
@model List<GetAllDestinationQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Şehir</th>
            <th>Gün-Gece</th>
            <th>Fiyat</th>
            <th>Kapasite</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.city</td>
                <td>@item.daynight</td>
                <td>@item.price</td>
                <td>@item.capacity</td>
                <td><a href="#" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/Admin/DestinationCQRS/GetDestination/@item.id" class="btn btn-outline-success">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Admin/DestinationCQRS/AddDestination/" class="btn btn-success">Yeni Rota Girişi</a>
